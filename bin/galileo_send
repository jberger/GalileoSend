#!/usr/bin/env perl

use Mojo::Base -strict;

use FindBin;
use lib "$FindBin::Bin/../lib";

use Getopt::Long;

my $spec = {};
GetOptions(
  'chunksize=i' => \$spec->{max_chunksize},
  'url=s' => \$spec->{url},
);

die "A url is required" unless $spec->{url};

require App::GalileoSend;
my $sender = App::GalileoSend->new( $spec );
$sender->send( @ARGV );


